<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<!-- show List game from endpoint games -->

<div class="container" style="padding-top: 20px">
  <h1 style="padding-bottom: 20px">List Games</h1>
  <% if(role=='admin') {%>
  <h3><button><a href="/games/add">add new game</a></button></h3>
  <% } %> 
  <table class="table" style="width:100%;" >
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Action</th>
    </tr>
    <% data.forEach(el=>{ %>
      <tr>
        <td><%= el.name %> </td>
        <td><%= el.genre %> </td>
        <td><%= el.rating %> </td>
        <td> <a href="games/<%= el.id %>/<%= el.slug %>">detail</a></td>
      </tr>
    <% })%> 
  </table>
</div>

